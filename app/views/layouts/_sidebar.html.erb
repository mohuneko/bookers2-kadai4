
 <div class="col-xs-3">

 <div id="success_explanation">
  <p><%= flash[:message] %></p>
  </div>
  <div class="success_message">
  <p><%= flash[:notice] %></p>
  </div>
  <% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<h2>User info</h2>

<!-- User Info -->

<table class="table">
		<tr><%= attachment_image_tag @user, :profile_image, size:'100x100', fallback: "no_image.jpg", size:'100x100' %></tr>

		<tr>
			<th>name</th>
			<th><%= @user.name %></th>
		</tr>

		<tr>
			<th>introduction</th>
			<th><%= @user.introduction %></th>
		<tr>
			<th>follows</th>
			<th><%= link_to "#{@user.follower.count}", followers_path(@user) %></th>
		</tr>
		<tr>
			<th>followers</th>
			<th><%= link_to "#{@user.followed.count}", followees_path(@user) %></th>
		</tr>
</table>


<% if @user == current_user %>
	<div class="row">
		<%= link_to edit_user_path(current_user) do %>
			 <p class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" ></p> 
		<% end %>
    </div>
<% else %>
	<% if current_user.following?(@user) %>
	    <%= link_to 'フォロー外す', unfollow_path(@user.id), method: :DELETE, class:"btn btn-primary" %>
	<% else %>
	    <%= link_to 'フォローする', follow_path(@user.id), method: :POST, class:"btn btn-success"%>
	<% end %>
<% end %>

  

<!-- User Info -->


<h2>New book</h2>

<!-- New Book -->
<%= form_for(@book) do |f| %>
	<div class="field row">
		<h4>Title</h4>
		<%= f.text_field :title, class: "col-xs-12 book_title" %>
	</div>

	<div class="field row">
		<h4>Opinion</h4> <!-- ここを変更 -->
		<%= f.text_area :body, class: "col-xs-12 book_body" %>
	</div>

	<div class="actions row">
		<%= f.submit "Create Book", class: "btn btn-primary col-xs-12 field" %>
	</div>
<% end %>
<!-- New Book -->

 </div>

