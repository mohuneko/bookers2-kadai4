
<div class="container">
 <div class="row">
<div class="col-xs-12">
	<div class="body">
<h2>Follower Users</h2>

<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% if user_signed_in? %>

		<% @users.each do |user| %>

		<tr>
			<td><%= attachment_image_tag(user, :profile_image, size:"50x50", fallback: "no-image-mini.jpg") %></td>
			<td><%= user.name%></td>
			<td><p><%= "フォロー数: #{user.follower.count}" %></p></td>
			<td><p><%= "フォロワー数: #{user.followed.count}" %></p></td>
			<td>
			<p>
            <% unless user == current_user %>
			<% if current_user.following?(user) %>
			<%= link_to 'フォロー外す', unfollow_path(user.id), method: :DELETE %>
			<% else %>
			<%= link_to 'フォローする', follow_path(user.id), method: :POST %>
			<% end %>
			<% end %>

			</p>
			</td>
			<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
		</tr>
		<% end %>
		<% end %>
	</tbody>
</table>

</div>
</div>
</div>
</div>
